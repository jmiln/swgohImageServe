<head>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<style>
    body {
        background-image: linear-gradient(#1A2E37, #1A506F);
    }
</style>

<base href="<%= baseURL %>">

<body>
    <div id="wrapper" style="max-width: <%= maxCharWidth %>">
        <div id="header">
            <%- header %>
        </div>
        <div id="charList">
            <% characters.forEach(function(char) { %>
                <%- include('../partials/char', {char: char}); %>
            <% }); %>
        </div>
        <div id="footer">
            <%- footer %>
        </div>
    </div>
</body>
